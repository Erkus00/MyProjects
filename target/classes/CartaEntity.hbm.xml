<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.CartaEntity" table="carta" schema="comanda_desayunos">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(255)"/>
        </property>
        <property name="tipo">
            <column name="tipo" sql-type="varchar(255)"/>
        </property>
        <property name="precio">
            <column name="precio" sql-type="float" precision="-1"/>
        </property>
        <property name="disponibilidad">
            <column name="disponibilidad" sql-type="tinyint(1)"/>
        </property>
        <set name="cartaPedidosById" inverse="true">
            <key>
                <column name="producto_id"/>
            </key>
            <one-to-many not-found="ignore" class="entity.CartaPedidoEntity"/>
        </set>
    </class>
</hibernate-mapping>