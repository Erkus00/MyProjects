<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.PedidoEntity" table="pedido" schema="comanda_desayunos">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="fecha">
            <column name="fecha" sql-type="date"/>
        </property>
        <property name="cliente">
            <column name="cliente" sql-type="text"/>
        </property>
        <property name="estado">
            <column name="estado" sql-type="varchar(255)"/>
        </property>
        <set name="cartaPedidosById" inverse="true">
            <key>
                <column name="id_pedido"/>
            </key>
            <one-to-many not-found="ignore" class="entity.CartaPedidoEntity"/>
        </set>
    </class>
</hibernate-mapping>